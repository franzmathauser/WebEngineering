<!DOCTYPE html>
<html>
<head>
  <title>WaveCloud</title>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">

    
    <%= render 'layouts/header' %>
    <% if signed_in? %>
      <%= render 'layouts/menu' %>
    <% end %>
   

    <section class="span-17 colborder">

        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>

        <%= yield %>

    </section>

    <% if signed_in? %>
      <%= render 'layouts/playlist' %>
    <% end %>

    <div class="clear"></div>

    <%= render 'layouts/footer' %>
   
    <%= debug(params) if Rails.env.development? %>

  </div>

</body>
</html>
