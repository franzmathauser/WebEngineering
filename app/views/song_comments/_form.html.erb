<%= form_for([@song, @song.song_comments.build]) do |f| %>
  
    <%= render 'shared/error_messages', :object => f.object %>
    
    <%= f.text_field :from_duration %>
    <%= f.text_field :to_duration %>

  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script type="text/javascript">
var sel= $('#layer3');
var mL = parseInt(sel.css('margin-left').slice(0,-2));
var w = sel.width();

from = Math.round(mL/aicWidth*audioElement.duration*100)/100;
to = Math.round((mL+w)/aicWidth*audioElement.duration*100)/100;

$('#song_comment_from_duration').val(from);
$('#song_comment_to_duration').val(to);
</script>
